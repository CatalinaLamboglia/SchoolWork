<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".StatesAndCapitols"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@color/skyBlue">

    <TextView
        android:id="@+id/header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="@string/give_me_data"
        android:textSize="10pt"
        android:textColor="@color/darkPurple"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_centerHorizontal="true"
        android:layout_centerInParent="true"
        android:gravity="center">


        <EditText
            android:id="@+id/userInput"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:inputType="text"
            android:hint="@string/edit_text"
            android:textColor="@color/darkPurple"
            android:layout_toRightOf="@+id/returnInput"/>


        <Button
            android:id="@+id/returnInput"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:onClick="queryInput"
            android:text="Submit"
            android:background="@color/lighterGrey"
            android:textColor="@color/darkPurple"
            />
    </RelativeLayout>

    <TextView
        android:id="@+id/resulting_string"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="10pt"
        android:textColor="@color/darkPurple"
        android:text="@string/default_result"
        android:gravity="center"/>


</LinearLayout>